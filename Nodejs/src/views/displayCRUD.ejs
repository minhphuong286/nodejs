<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display CRUD</title>
    <style>
        table, th, td {
            border:1px solid black;
            border-collapse: collapse;
        }
    </style>
</head>
<body>
    <h1>display CRUD from views</h1>
    <table style="width:100%">
        <tr>
          <th>id</th>
          <th>email</th>
          <th>password</th>
          <th>firstName</th>
          <th>lastName</th>
          <th>address</th>
          <th>phonenumber</th>
          <th>gender</th>
          <th>roleId</th>
          <th>positionId</th>
          <th>image</th>
          <th>Action</th>
        </tr>
        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
              <td><%= dataTable[i].id %></td>
              <td><%= dataTable[i].email %></td>
              <td><%= dataTable[i].password %></td>
              <td><%= dataTable[i].firstName %></td>
              <td><%= dataTable[i].lastName %></td>
              <td><%= dataTable[i].address %></td>
              <td><%= dataTable[i].phonenumber %></td>
              <td><%= dataTable[i].gender %></td>
              <td><%= dataTable[i].roleId %></td>
              <td><%= dataTable[i].positionId %></td>
              <td><%= dataTable[i].image %></td>
              <td>
                <a href="/edit-crud?id=<%= dataTable[i].id %>" type="button">Edit</a>
                <a href="/del-crud?id=<%= dataTable[i].id %>" type="button">Del</a>
                
              </td>
            </tr>
         <% } %>
      </table>
</body>
</html>